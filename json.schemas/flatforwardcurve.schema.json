{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "flatforwardcurve.schema.json",
    "description": "Flat forward curve",
    "type": "object",
    "properties": {
        "curveType": {
            "const": "FlatForward"
        },
        "rate": {
            "type": "number",
            "description": "The flat forward rate"
        },
        "dayCounter": {
            "$ref": "common.schema.json#/definitions/dayCounter"
        },
        "compounding": {
            "$ref": "common.schema.json#/definitions/compounding"
        },
        "frequency": {
            "$ref": "common.schema.json#/definitions/frequency"
        },
        "enableExtrapolation": {
            "type": "boolean",
            "description": "Enable extrapolation"
        },
        "refDate": {
            "$ref": "common.schema.json#/definitions/date"
        }
    },
    "required": [
        "curveType",
        "rate"
    ]
}