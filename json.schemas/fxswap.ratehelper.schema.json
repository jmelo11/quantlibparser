{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "fxswap.ratehelper.schema.json",
    "properties": {
        "helperType": {
            "const": "FxSwap"
        },
        "helperConfig": {
            "type": "object",
            "properties": {
                "tenor": {
                    "$ref": "common.schema.json#/definitions/tenor"
                },
                "startDate": {
                    "$ref": "common.schema.json#/definitions/date"
                },
                "endDate": {
                    "$ref": "common.schema.json#/definitions/date"
                },
                "calendar": {
                    "$ref": "common.schema.json#/definitions/calendar"
                },
                "settlementDays": {
                    "$ref": "common.schema.json#/definitions/settlementDays"
                },
                "endOfMonth": {
                    "$ref": "common.schema.json#/definitions/endOfMonth"
                },
                "convention": {
                    "$ref": "common.schema.json#/definitions/convention"
                },
                "collateralCurve": {
                    "$ref": "common.schema.json#/definitions/discountCurve"
                },
                "baseCurrencyAsCollateral": {
                    "type": "boolean"
                },
                "fixingDays": {
                    "$ref": "common.schema.json#/definitions/settlementDays"
                }
            },
            "allOf": [
                {
                    "if":{
                        "not":{
                            "required": [
                                "tenor", "baseCurrencyAsCollateral"
                            ]
                        }
                    },
                    "then":{
                        "required": [                            
                            "endDate", "baseCurrencyAsCollateral"
                        ]
                    }
                }
            ]
        },
        "marketConfig": {
            "type": "object",
            "properties": {
                "fxPoints": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                },
                "fxSpot": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                }
            },
            "required": [
                "fxPoints",
                "fxSpot"
            ]
        }
    },
    "required": [
        "helperType",
        "helperConfig",
        "marketConfig"
    ]
}