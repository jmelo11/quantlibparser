{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common.schema.json",
  "description": "Common schemas specification",
  "definitions": {
    "date": {
      "description": "Date",
      "type": "string",
      "format": "date"
    },
    "settlementDays": {
      "description": "Settlement Days",
      "type": "integer",
      "minimum": 0
    },
    "dayCounter": {
      "description": "Day Counter",
      "type": "string",
      "enum": [
        "Act360",
        "Act365",
        "Thirty360"
      ]
    },
    "notional": {
      "description": "Notional",
      "type": "number",
      "example": 1000000
    },
    "currency": {
      "type": "string",
      "description": "Currency",
      "example": "CLP",
      "enum": [
        "CLP",
        "USD",
        "EUR",
        "CLF"
      ]
    },
    "compounding": {
      "type": "string",
      "description": "Rate Compounding",
      "example": "Simple",
      "enum": [
        "Simple",
        "Compounded",
        "Continuous"
      ]
    },
    "convention": {
      "type": "string",
      "description": "convention",
      "example": "Unadjusted",
      "enum": [
        "Following",
        "ModifiedFollowing",
        "Unadjusted"
      ]
    },
    "discountCurve": {
      "description": "Discount Curve",
      "type": "string"
    },
    "index": {
      "description": "Index",
      "type": "string"
    },
    "frequency": {
      "type": "string",
      "description": "Frequency",
      "example": "Annual",
      "enum": [
        "Annual",
        "SemiAnnual",
        "Quarterly",
        "Monthly",
        "Once",
        "NoFrequency"
      ]
    },    
    "marketQuote": {
      "type": "object",
      "description": "Market Quote",
      "properties": {
        "ticker": {
          "description": "Ticker",
          "type": "string"
        },
        "value": {
          "description": "Value",
          "type": "number"
        },
        "description": {
          "description": "Description",
          "type": "string"
        }
      },
      "required": [
        "value"
      ]
    },
    "calendar": {
      "type": "string",
      "description": "calendar",
      "example": "NullCalendar",
      "enum": [
        "NullCalendar",
        "Chile",
        "Usa",
        "Joint"
      ]
    },
    "tenor": {
      "description": "Tenor",
      "type": "string",
      "pattern": "^\\d+[YWDM]$"
    },
    "endOfMonth": {
      "description": "End of Month",
      "type": "boolean"
    }
  }
}