{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "tenorbasis.ratehelper.schema.json",
    "properties": {
        "helperType": {
            "const": "TenorBasis"
        },
        "helperConfig": {
            "type": "object",
            "properties": {
                "tenor": {
                    "$ref": "common.schema.json#/definitions/tenor"
                },
                "spreadOnShortIndex": {
                    "type": "boolean"
                },
                "shortIndex": {
                    "type": "string"
                },
                "longIndex": {
                    "type": "string"
                },
                "discountCurve": {
                    "$ref": "common.schema.json#/definitions/discountCurve"
                },              
                "shortPayTenor": {
                    "type": "boolean"
                }
            },
            "required": [
                "tenor",
                "shortIndex",
                "longIndex"
            ]
        },
        "marketConfig": {
            "type": "object",
            "properties": {
                "spread": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                }
            },
            "required": [
                "spread"
            ]
        }
    },
    "required": [
        "helperType",
        "helperConfig",
        "marketConfig"
    ]
}