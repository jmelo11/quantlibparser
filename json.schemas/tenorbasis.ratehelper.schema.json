{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "tenorbasis.ratehelper.schema.json",
    "$ref": "ratehelper.schema.json",
    "definitions": {
        "helperConfig": {
            "type": "object",
            "properties": {
                "spreadOnShortIndex": {
                    "type": "boolean"
                },
                "shortIndex": {
                    "type": "string"
                },
                "longIndex": {
                    "type": "string"
                },
                "discountingCurve": {
                    "$ref": "common.schema.json#/definitions/discountingCurve"
                },
                "tenor": {
                    "$ref": "common.schema.json#/definitions/tenor"
                },
                "shortPayTenor": {
                    "type": "boolean"
                }
            },
            "required": [
                "tenor",
                "shortIndex",
                "longIndex",
                "spreadOnShortIndex"
            ]
        },
        "marketConfig": {
            "type": "object",
            "properties": {
                "spread": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                }
            },
            "required": [
                "rate"
            ]
        }
    },
    "if": {
        "properties": {
            "helperType": {
                "const": "TenorBasis"
            }
        }
    },
    "then": {
        "properties": {
            "helperType": {
                "const": "TenorBasis"
            },
            "helperConfig": {
                "$ref": "#/definitions/helperConfig"
            },
            "marketConfig": {
                "$ref": "#/definitions/marketConfig"
            }
        },
        "required": [
            "helperType",
            "helperConfig",
            "marketConfig"
        ]
    },
    "else": false
}