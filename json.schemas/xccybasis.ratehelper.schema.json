{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "xccybasis.ratehelper.schema.json",
    "$ref": "ratehelper.schema.json",
    "definitions": {
        "helperConfig": {
            "type": "object",
            "properties": {
                "tenor": {
                    "$ref": "common.schema.json#/definitions/tenor"
                },                
                "calendar": {
                    "$ref": "common.schema.json#/definitions/calendar"
                },
                "settlementDays": {
                    "$ref": "common.schema.json#/definitions/settlementDays"
                },
                "endOfMonth": {
                    "$ref": "common.schema.json#/definitions/endOfMonth"
                },
                "convention": {
                    "$ref": "common.schema.json#/definitions/convention"
                },
                "flatDiscountCurve": {
                    "$ref": "common.schema.json#/definitions/discountCurve"
                },
                "spreadDiscountCurve": {
                    "$ref": "common.schema.json#/definitions/discountCurve"
                },
                "flatIndex": {
                    "$ref": "common.schema.json#/definitions/index"
                },
                "spreadIndex": {
                    "$ref": "common.schema.json#/definitions/index"
                }
                
            },
            "required": [
                "tenor"
            ]
        },
        "marketConfig": {
            "type": "object",
            "properties": {
                "fxSpot": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                },
                "spread": {
                    "$ref": "common.schema.json#/definitions/marketQuote"
                }
            },
            "required": [
                "fxSpot",
                "spread"
            ]
        }
    },
    "if": {
        "properties": {
            "helperType": {
                "const": "XccyBasis"
            }
        }
    },
    "then": {
        "properties": {
            "helperType": {
                "const": "XccyBasis"
            },
            "helperConfig": {
                "$ref": "#/definitions/helperConfig"
            },
            "marketConfig": {
                "$ref": "#/definitions/marketConfig"
            }
        },
        "required": [
            "helperType",
            "helperConfig",
            "marketConfig"
        ]
    },
    "else": false
}