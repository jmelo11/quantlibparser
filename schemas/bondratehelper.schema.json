{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "bondratehelper.schema.json",
    "$ref": "ratehelper.schema.json#/properties",
    "if": {
        "properties": {
            "rateHelperType": {
                "const": "Bond"
            }
        }
    },
    "then": {
        "properties": {
            "rateHelperType": {
                "const": "Bond"
            },
            "helperConfig": {
                "$ref": "bondratehelper.config.schema.json"
            },
            "marketConfig": {
                "$ref": "bondratehelper.config.schema.json/#/$defs/marketConfig"
            }
        }
    },
    "else": false
}