{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "bondratehelper.config.schema.json",
    "description": "Bond rate helper schema",
    "type": "object",
    "properties": {
        "tenor": {
            "$ref": "common.schema.json/#tenor"
        },
        "couponDayCounter": {
            "$ref": "common.schema.json/#dayCounter",
            "default": "Thirty360"
        },
        "couponRate": {
            "type": "number",
            "default": 0.03
        },
        "yieldDayCounter": {
            "$ref": "common.schema.json/#dayCounter",
            "default": "Act365"
        },
        "calendar": {
            "$ref": "common.schema.json/#calendar",
            "default": "NullCalendar"
        },
        "paymentFrequency": {
            "$ref": "common.schema.json/#frequency",
            "default": "SemiAnnual"
        },
        "settlementDays": {
            "$ref": "common.schema.json/#settlementDays",
            "default": 0
        },
        "notional": {
            "$ref": "common.schema.json/#notional",
            "default": 100
        },
        "startDate": {
            "$ref": "common.schema.json/#date"
        },
        "endDate": {
            "$ref": "common.schema.json/#date"
        }
    },
    "required": [
        "tenor",
        "endDate"
    ],
    "$defs": {
        "marketConfig": {
            "type": "object",
            "properties": {
                "rate": {
                    "$ref": "common.schema.json/#marketQuote"
                }
            },
            "required": [
                "rate"
            ]
        }
    }
}